<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/faded_red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android android:text="Il y'a une semaine"/>

        <ImageView
            android:id=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_48px"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/banana_yellow"
        android:tooltipText="jaj">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android android:text="Il y'a six jours"/>

        <ImageView
            android:id="@+id/fragment_mood_img_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_48px"/>

        <TextView
            android:layout_width=""
            android:layout_height="" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/cornflower_blue_65">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android android:text="Il y'a cing jours"/>

        <ImageView
            android:id=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_48px"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/light_sage">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android android:text="Il y'a quatre jours"/>

        <ImageView
            android:id=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_48px"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/warm_grey">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android android:text="Il y'a trois jours"/>

        <ImageView
            android:id=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_48px"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/faded_red">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android android:text="Avant hier"/>

        <ImageView
            android:id=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_48px"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/banana_yellow">

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android android:text="Hier"/>

        <ImageView
            android:id=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment_black_48px"/>

    </android.support.constraint.ConstraintLayout>



</LinearLayout>
